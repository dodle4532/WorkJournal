<Window x:Class="WorkJournal.Forms.AddQuestionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkJournal.Forms"
        mc:Ignorable="d"
        Title="Добавить вопрос" Height="700" Width="866.024" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,4,3.4">
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="70,67,0,0" VerticalAlignment="Top" FontSize="20" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="userNameBox" IsEnabled="False" HorizontalAlignment="Left" Height="37" Margin="318,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
        <Label Content="Текст вопроса" HorizontalAlignment="Left" Margin="67,221,0,0" VerticalAlignment="Top" Height="37" Width="165" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="questionTextBox" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" Height="188" Margin="315,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="370" FontSize="16"/>
        <ComboBox x:Name="depComboBox" HorizontalAlignment="Left" Margin="315,458,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="134" Height="31" FontSize="16" FontWeight="Bold"/>
        <Label Content="Куда направить?" HorizontalAlignment="Left" Margin="70,452,0,0" VerticalAlignment="Top" Height="37" Width="190" FontSize="20" FontWeight="Bold"/>
        <Button Content="Создать вопрос" HorizontalAlignment="Left" Margin="318,567,0,0" VerticalAlignment="Top" Width="198" Height="47" FontSize="20" Click="Button_Click" FontWeight="Bold" RenderTransformOrigin="-0.033,0.804"/>
        <Label Content="Номер документа" HorizontalAlignment="Left" Margin="67,142,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.016,-0.578" Height="37" Width="193" FontSize="20" FontWeight="Bold"/>
        <TextBox x:Name="doc_id_TextBox" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="37" Margin="318,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="113" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
