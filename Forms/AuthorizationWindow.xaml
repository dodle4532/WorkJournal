<Window x:Class="WorkJournal.Forms.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkJournal.Forms"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Введите логин и пароль" Margin="223,73,0,0" Height="60" Width="375" FontSize="30" Cursor="AppStarting" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="46" Margin="246,176,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="327" FontSize="20" VerticalContentAlignment="Center" FontWeight="Bold"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="147,183,0,0" VerticalAlignment="Top" Height="39" Width="81" FontSize="20" FontWeight="Bold"/>
        <Label x:Name ="passwordLabel" Content="Пароль" HorizontalAlignment="Left" Margin="147,259,0,0" VerticalAlignment="Top" Height="39" Width="94" FontSize="20" FontWeight="Bold"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="246,251,0,0" VerticalAlignment="Top" Height="47" Width="327" FontSize="20" VerticalContentAlignment="Center"/>
        <Button x:Name="enterButton" Content="Войти" HorizontalAlignment="Left" Margin="268,318,0,0" VerticalAlignment="Top" Width="255" Height="55" FontSize="20" Click="Button_Click" FontWeight="Bold"/>
    </Grid>
</Window>