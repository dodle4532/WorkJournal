<Window x:Class="WorkJournal.Forms.ChangeStatusForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkJournal.Forms"
        mc:Ignorable="d"
        Title="ChangeStatusForm" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Выберите вопрос" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="237,76,0,0" VerticalAlignment="Top" Height="30" Width="163" FontSize="16"/>
        <ComboBox x:Name="questionComboBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="422,76,0,0" VerticalAlignment="Top" Width="130" Height="30" FontSize="20" RenderTransformOrigin="0.44,5.227"/>
        <Label Content="Новый статус" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="237,222,0,0" VerticalAlignment="Top" Height="30" Width="163" FontSize="16"/>
        <ComboBox x:Name="statusComboBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="422,222,0,0" VerticalAlignment="Top" Width="130" Height="30" FontSize="20" RenderTransformOrigin="0.44,5.227"/>
        <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="329,326,0,0" VerticalAlignment="Top" Width="128" Height="48" Click="okButton_Click"/>

    </Grid>
</Window>
