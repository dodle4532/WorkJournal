<Window x:Class="WorkJournal.Forms.ChangeStatusForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkJournal.Forms"
        mc:Ignorable="d"
        Title="Изменение статуса" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Выберите вопрос" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="174,61,0,0" VerticalAlignment="Top" Height="66" Width="185" FontSize="20" FontWeight="Bold"/>
        <ComboBox x:Name="questionComboBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="458,82,0,0" VerticalAlignment="Top" Width="130" Height="30" FontSize="20" RenderTransformOrigin="0.44,5.227"/>
        <Label Content="Новый статус" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="174,192,0,0" VerticalAlignment="Top" Height="42" Width="168" FontSize="20" FontWeight="Bold"/>
        <ComboBox x:Name="statusComboBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="458,204,0,0" VerticalAlignment="Top" Width="130" Height="30" FontSize="20" RenderTransformOrigin="0.44,5.227"/>
        <Button x:Name="okButton" Content="Ок" HorizontalAlignment="Left" Margin="329,326,0,0" VerticalAlignment="Top" Width="128" Height="48" Click="okButton_Click" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
