<Window x:Class="WorkJournal.Forms.AddAnswerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkJournal.Forms"
        mc:Ignorable="d"
        Title="AddAnswerForm" Height="796.6" Width="800" WindowStartupLocation="CenterScreen">
    <Grid RenderTransformOrigin="1.064,0.022" Margin="0,0,-0.4,-2.8">
        <Label Content="Выберите вопрос" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="107,26,0,0" VerticalAlignment="Top" Height="30" Width="163" FontSize="16"/>
        <ComboBox x:Name="req_id_comboBox" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="292,26,0,0" VerticalAlignment="Top" Width="130" Height="30" SelectionChanged="Doc_Id_ComboBox_SelectionChanged" FontSize="20"/>
        <Label Content="Текст вопроса" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="107,87,0,0" VerticalAlignment="Top" Height="30" Width="141" FontSize="16"/>
        <TextBox x:Name="questionTextBox" HorizontalAlignment="Left" Height="145" Margin="292,94,0,0" TextWrapping="Wrap" IsEnabled="False" Text="" VerticalAlignment="Top" Width="320" FontSize="16"/>
        <Grid x:Name="answerGrid" HorizontalAlignment="Left" Height="493" Margin="2,365,-2,-88" VerticalAlignment="Top" Width="794">
            <Label Content="Имя" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="106,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.099,0.664" Height="34" Width="141" FontSize="16"/>
            <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="34" Margin="291,50,0,0" TextWrapping="Wrap" Text="" IsEnabled="False" VerticalAlignment="Top" Width="320"/>
            <Label Content="Текст ответа" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="106,127,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.099,0.664" Height="34" Width="141" FontSize="16"/>
            <TextBox x:Name="answerTextBox" HorizontalAlignment="Left" Height="145" Margin="291,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="320" FontSize="16"/>
            <Button Content="Отправить" HorizontalAlignment="Left" Margin="291,310,0,0" VerticalAlignment="Top" Width="218" Height="61" FontSize="20" Click="Button_Click"/>
        </Grid>
        <Grid x:Name="commentGrid" HorizontalAlignment="Left" Height="100" Margin="2,281,0,0" VerticalAlignment="Top" Width="782">
            <Label Content="Комментарий" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Margin="102,24,0,0" VerticalAlignment="Top" Height="30" Width="141" FontSize="16"/>
            <TextBox x:Name="commentTextBox" HorizontalAlignment="Left" Height="63" Margin="291,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="324" FontSize="16" IsEnabled="False"/>
        </Grid>

    </Grid>
</Window>
